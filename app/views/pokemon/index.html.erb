<h1>Pok√©dex</h1>

<!-- List of pokemon -->
<ul class="pokedex-list">
  <% @pokemon.each do |pkmn| %>
    <li>
      <button class="js-show-button btn btn-link"
          data-pokemon-uri="<%= pkmn["resource_uri"] %>">
        <%= pkmn["name"] %>
      </button>
    </li>
  <% end %>
</ul>


<!-- Pokemon modal view1 (hidden at first) -->

<div class="modal fade js-pokemon-modal">
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="modal-header">
        <button class="close" data-dismiss="modal">
          <span>&times;</span>
        </button>

        <h3 class="modal-title">
          <br>
          <div class="modal-body right js-sprite" style="display: inline-block; margin:5px;"> 
          </div>
          <span class="js-pkmn-name">
            Feraligtr
          </span>
          <small class="js-pkmn-number">
          #160
          </small>  
          <button type="button" class="btn btn-default js-pkmn-evolutions" 
                  style="display: inline-block; padding:5px; margin:33px;">See evolutions</button>
        </h3>
      </div><!-- .modal-header -->

      <div class="modal-body left">
        <dl class="dl-horizontal">
          <dt>Height</dt>   <!-- definition term -->
          <dd  class="js-pkmn-height"></dd>      <!--  definition def -->
          <dt>Weight</dt>
          <dd class="js-pkmn-weight">888</dd>
          <dt>Attack</dt>
          <dd class="js-pkmn-attack">888</dd>
          <dt>Defense</dt>
          <dd class="js-pkmn-defense">888</dd>
          <dt>Special Attack</dt>
          <dd class="js-pkmn-sp_atk">888</dd>
          <dt>Special Defense</dt>
          <dd class="js-pkmn-sp_def">888</dd>
          <dt>Speed</dt>
          <dd class="js-pkmn-speed">888</dd>
          <dt>Type(s)</dt>
          <dd class="js-pkmn-types"></dd>
          <dt>Description</dt>
          <dd class="js-pkmn-description"></dd>
        </dl>
      </div><!-- .modal-body -->

    </div><!-- .modal-content -->
  </div><!-- .modal-dialog -->
</div><!-- .modal -->

<!-- Pokemon modal view2 (hidden at first) -->

<div id="myModal" class="modal fade js-pokemon-evolutions" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Modal Header</h4>
      </div>
      <div class="modal-body js-evolutions-list">
        <p>Some text in the modal.</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>

  </div>
</div>
